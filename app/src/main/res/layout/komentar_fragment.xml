<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.komentar.Komentar">

    <data>

        <variable
            name="vm"
            type="com.tdn.laporan_desa.ui.komentar.KomentarViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.todkars.shimmer.ShimmerRecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="40dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:shimmer_recycler_item_count="5"
            app:shimmer_recycler_layout="@layout/item_shimmer_laporan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="4"
            android:paddingStart="@dimen/dp_16"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:background="@color/putih">

            <EditText
                android:id="@+id/et_komentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginRight="@dimen/padding_10"
                android:hint="Ketikkan sesuatu.." />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_komen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_baseline_send_24"
                android:layout_marginLeft="15dp"
                app:fabSize="normal"
                app:borderWidth="0dp"
                app:elevation="0dp"
                android:backgroundTint="@color/putih" />
        </LinearLayout>
    </RelativeLayout>
</layout>